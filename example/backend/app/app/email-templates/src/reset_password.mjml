<mjml>
  <mj-body>
    <mj-section>
      <mj-column>
        <mj-image
          width="60px"
          src="https://tailwindui.com/img/logos/mark.svg?color=rose&shade=500"
          href="{{ server_host }}"
        ></mj-image>
        <mj-divider border-color="#f43f5e"></mj-divider>
        <mj-text font-size="16px" font-weight="bold" color="#635246"
          >{{ project_name }} - Password Recovery</mj-text
        >
        <mj-text font-size="16px" color="#635246"
          >We received a request to recover the password for user {{ username }}
          with email {{ email }}</mj-text
        >
        <mj-text font-size="16px" color="#635246"
          >Reset your password by clicking the button below:</mj-text
        >
        <mj-button
          background-color="#f43f5e"
          color="white"
          font-family="helvetica"
          href="{{ link }}"
        >
          Reset Password
        </mj-button>
        <mj-text font-size="16px" color="#635246"
          >Or open the following link:</mj-text
        >
        <mj-text font-size="16px" color="#635246"
          ><a href="{{ link }}">{{ link }}</a></mj-text
        >
        <mj-divider border-color="#635246" border-width="2px" />
        <mj-text font-size="16px" color="#635246"
          >The reset password link / button will expire in {{ valid_hours }}
          hours.</mj-text
        >
        <mj-text font-size="16px" color="#635246"
          >If you didn't request a password recovery you can disregard this
          email.</mj-text
        >
        <mj-text font-size="16px" color="#635246" font-family="helvetica"
          >For any concerns or queries, just email me.</mj-text
        >
        <mj-text
          font-size="16px"
          font-weight="bold"
          color="#635246"
          font-family="helvetica"
          >{{ server_bot }} @ {{ server_name }}</mj-text
        >
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
